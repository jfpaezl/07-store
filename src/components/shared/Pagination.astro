---
interface Props {
    totalPages: number;
}
const { totalPages } : Props = Astro.props;
const url = Astro.url;
const pageParam = Number(url.searchParams.get('page')) || 1;

const currentPage = Math.max(pageParam >totalPages ? totalPages : pageParam, 1);

const path = url.pathname;
---

<div class="contendPagination">
    <a href={`${path}?page=${Math.max(currentPage - 1,1)}`} class="button">Ateriores</a>
    <span>PÃ¡gina {pageParam} de {totalPages}</span>
    <a href={`${path}?page=${Math.min(currentPage + 1,1)}`}  class="button">Sigientes</a>
</div>

<style>
    .button {
        background-color: oklch(62.3% 0.214 259.815); /* oklch(62.3% 0.214 259.815)*/
        padding: calc(var(--spacing) * 2);
        color: #fff /* #fff = #ffffff */;
        border-radius: 2px;
    }
    .contendPagination{
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 20px;
    }
</style>